{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		// "isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"types": [
			"@modyfi/vite-plugin-yaml/modules"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": [
		"game/**/*"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}